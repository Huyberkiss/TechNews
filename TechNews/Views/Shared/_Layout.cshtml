        <div class="container-fluid">
            <a class="navbar-brand" href="/">Berkiss</a>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
                    <li class="nav-item"><a href="/Home/About" class="nav-link">About</a></li>
                    <li class="nav-item"><a href="/Home/" class="nav-link">All News</a></li>
                    <li class="nav-item"><a href="/Home/Contact" class="nav-link">Contact</a></li>
                    <li class="nav-item"><a href="/Home/" class="nav-link">Advertise</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right ml-auto p-1">
                    <li class="nav-item"><a href="/Account/Register" id="registerLink" class="nav-link">Register</a></li>
                    <li class="nav-item"><a href="/Account/Login" id="loginLink" class="nav-link">Log in</a></li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fab fa-youtube"></i>
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
        @RenderBody()
        <footer class="footer ">
           <div class="container-fluid">
              <div class="d-flex justify-content-lg-around text-light">
                 <div>
                     <div class="h2"> Subcribe hehe</div> 
                 </div>
                 <div>
                     <h5>Home</h5><br />
                     <h5>About</h5><br />
                     <h5>All News</h5><br />
                     <h5>Contact</h5><br />
                     <h5>Advertise</h5><br />
                 </div>
              </div>
           </div>
        </footer>
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
