    <style>
        nav {
            background-color: #000;
        }

        .navbar-brand {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

        .nav-link {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            color: #fff !important;
        }

        .footer {
            background-color: #080861;
            padding: 100px 0px;
        }

    </style>
