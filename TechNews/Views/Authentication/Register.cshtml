
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CodePen - Sign-Up/Login Form</title>
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="~/Style/login_style.css">
    <script>
        function validateRegister() {

            var password = document.forms["fRegister"]["txtPassword"];
            var email = document.forms["fRegister"]["txtEmail"];

            var regPass = /^(?=.*[A-Z])(?=.*[!@@#$%^&*])(?=.*[0-9])(?=.*[a-z]).{8,20}$/;
            if (regPass.test(password.value) == false) {
                document.getElementById("error").innerHTML = "Password must contain number, uppercase, lowercase, special character !<br>Lenght fromt 8-20 characters";
                return false;
            } else {
                document.getElementById("error").innerHTML = "";
            }

            var regEmail = /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            if (regEmail.test(email.value) == false) {
                document.getElementById("error").innerHTML = "Email is wrong format!<br>Ex: a@gmail.com";
                return false;
            } else {
                document.getElementById("error").innerHTML = "";
            }

            return true;
        }
    </script>
</head>
<body>

    <div class="form">
        <div>
            <h1>Register</h1>
            <div>
                <form onsubmit="return validateRegister()" action="/Authentication/Register" method="post" name="fRegister" id="fRegister">
                    <div class="row">
                        <div class="col-8">
                            <div class="field-wrap">
                                <label>
                                    Username<span class="req"></span>
                                </label>
                                <input type="text" name="txtUsername" required />
                            </div>

                            <div class="field-wrap">
                                <label>
                                    Password<span class="req"></span>
                                </label>
                                <input type="password" name="txtPassword" required />
                            </div>

                            <div class="field-wrap">
                                <label>
                                    Fullname<span class="req"></span>
                                </label>
                                <input type="text" name="txtFullname" required />
                            </div>

                            <div class="field-wrap">
                                <label>
                                    Email<span class="req"></span>
                                </label>
                                <input type="text" name="txtEmail" required />
                            </div>

                        </div>
                        <div class="col-4">
                            <div>
                                <p id="error" style="text-align: center; color:red;">@ViewBag.errorRe</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="field-wrap">
                                <label for="role">Choose your role:</label><br><br>
                                <select name="txtRole" id="role">
                                    <option value="user">User</option>
                                    <option value="poster">Poster</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-6">
                            <button type="submit" class="button button-block">Register</button>
                        </div>
                    </div>
                </form>
            </div>


        </div>

    </div>
    </div>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Scripts/login.js"></script>

</body>
</html>


